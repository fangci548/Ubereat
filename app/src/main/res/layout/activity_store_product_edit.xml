<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/store_product_add"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".StoreProductEdit">

    <ImageView
        android:id="@+id/orderedit_back"
        android:layout_width="45dp"
        android:layout_height="45dp"
        android:layout_marginStart="16dp"
        android:layout_marginTop="16dp"
        android:onClick="onBack"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/icon_back"
        tools:ignore="SpeakableTextPresentCheck,TouchTargetSizeCheck" />

    <TextView
        android:id="@+id/store_new_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="編輯產品"
        android:textColor="@color/black"
        android:textSize="24sp"
        app:layout_constraintBottom_toBottomOf="@+id/orderedit_back"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@+id/orderedit_back" />

    <TextView
        android:id="@+id/product_name_tx"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="24dp"
        android:text="產品名稱："
        android:textColor="@color/black"
        android:textSize="20sp"
        app:layout_constraintStart_toStartOf="@+id/orderedit_back"
        app:layout_constraintTop_toBottomOf="@+id/orderedit_back" />

    <EditText
        android:id="@+id/et_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:ems="10"
        android:hint="請輸入產品名稱"
        android:inputType="textPersonName"
        app:layout_constraintBaseline_toBaselineOf="@+id/product_name_tx"
        app:layout_constraintStart_toEndOf="@+id/product_name_tx"
        tools:ignore="TouchTargetSizeCheck" />

    <TextView
        android:id="@+id/product_price_tx"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="24dp"
        android:text="產品價錢："
        android:textColor="@color/black"
        android:textSize="20sp"
        app:layout_constraintStart_toStartOf="@+id/orderedit_back"
        app:layout_constraintTop_toBottomOf="@+id/product_name_tx" />

    <TextView
        android:id="@+id/product_describe_tx"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="24dp"
        android:text="產品描述："
        android:textColor="@color/black"
        android:textSize="20sp"
        app:layout_constraintStart_toStartOf="@+id/orderedit_back"
        app:layout_constraintTop_toBottomOf="@+id/product_price_tx" />

    <TextView
        android:id="@+id/product_img_tx"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="24dp"
        android:text="產品圖片："
        android:textColor="@color/black"
        android:textSize="20sp"
        app:layout_constraintStart_toStartOf="@+id/orderedit_back"
        app:layout_constraintTop_toBottomOf="@+id/product_describe_tx" />

    <EditText
        android:id="@+id/et_price"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:ems="10"
        android:hint="請輸入產品價格"
        android:inputType="number"
        app:layout_constraintBaseline_toBaselineOf="@+id/product_price_tx"
        app:layout_constraintStart_toEndOf="@+id/product_price_tx"
        tools:ignore="TouchTargetSizeCheck" />

    <EditText
        android:id="@+id/et_describe"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:ems="10"
        android:hint="請輸入產品描述"
        android:inputType="textPersonName"
        app:layout_constraintBaseline_toBaselineOf="@+id/product_describe_tx"
        app:layout_constraintStart_toEndOf="@+id/product_describe_tx"
        tools:ignore="TouchTargetSizeCheck" />

    <Button
        android:id="@+id/store_new_img_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="68dp"
        android:text="選擇照片"
        app:layout_constraintBaseline_toBaselineOf="@+id/product_img_tx"
        app:layout_constraintStart_toEndOf="@+id/product_img_tx" />

    <Button
        android:id="@+id/newbottom"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="80dp"
        android:layout_marginTop="60dp"
        android:background="@drawable/mybutton"
        android:onClick="onSave"
        android:text="更新"
        android:textColor="@color/use"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/store_new_img_button" />

    <Button
        android:id="@+id/deletebottom"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="28dp"
        android:background="@drawable/deletebutton"
        android:onClick="onDelete"
        android:text="刪除商品"
        android:textColor="#F44336"
        app:layout_constraintEnd_toEndOf="@+id/cancelbottom"
        app:layout_constraintStart_toStartOf="@+id/newbottom"
        app:layout_constraintTop_toBottomOf="@+id/newbottom" />

    <Button
        android:id="@+id/cancelbottom"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="60dp"
        android:layout_marginEnd="80dp"
        android:background="@drawable/mybutton"
        android:onClick="onCancel"
        android:text="取消"
        android:textColor="@color/use"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/store_new_img_button" />
</androidx.constraintlayout.widget.ConstraintLayout>